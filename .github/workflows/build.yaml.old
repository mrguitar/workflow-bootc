name: bootc build
run-name: ${{ gitea.actor }} is running Gitea Actions ðŸš€

on:
  schedule:
    #- cron: "0 0 * * 5"
    #- cron: '@hourly'
  push:
    branches:
    - 'main'

jobs:
  build:
    runs-on: runner
    steps:
     # - name: subscription-access
     #   env:
     #     SMDEV_CONTAINER_OFF: 1
     #     orgid: ${{ secrets.REDHAT_ORGID }}
     #     activation_key: ${{ secrets.REDHAT_ACTIVATION_KEY }}
     #   run: |
     #     subscription-manager register --org=$orgid --activationkey=$activation_key
     #     mkdir -p  /tmp/podman-run-0
     
      - name: Configure XDG
        env:
          XDG_RUNTIME_DIR=/run/user/$(id -u)
        run: |
          mkdir -p /run/user/$(id -u)
      # Checks-out your repository under $GITHUB_WORKSPACE, so your job can access it
      - uses: actions/checkout@v3

      #- name: Log in to Red Hat Registry
        #env: 
          #XDG_RUNTIME_DIR: /tmp/podman-run-0
      #  uses: redhat-actions/podman-login@v1
      #  with:
      #     registry: registry.redhat.io
      #     username: ${{ secrets.REGISTRY_REDHAT_IO_USER }}
      #     password: ${{ secrets.REGISTRY_REDHAT_IO_PASSWORD }}
      #  continue-on-error: true

      - name: Build image
        id: build-image
        uses: redhat-actions/buildah-build@v2
        with:
          image: lamp-bootc
          tags: latest ${{ github.sha }}
          containerfiles: |
            ./Containerfile

      - name: Push To registry
        id: push-to-quay
        uses: redhat-actions/push-to-registry@v2
        with:
          image: ${{ steps.build-image.outputs.image }}
          tags: ${{ steps.build-image.outputs.tags }}
          registry: registry.mrguitar.xyz

      - name: Print image url
        run: echo "Image pushed to ${{ steps.push-to-quay.outputs.registry-paths }}"
